<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:background="@drawable/bg_white"
    android:padding="20dp">

    <TextView
        android:id="@+id/txtTitle"
        style="@style/bodyBoldLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Permissions Required"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtSubTitle"
        style="@style/bodyLightMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="This feature requires location in the background. The user will be notified on based on the current updated location.\n\n Do you want to allow location permissions ?"
        app:layout_constraintTop_toBottomOf="@id/txtTitle" />

    <TextView
        android:id="@+id/txtDeny"
        style="@style/bodyBoldMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:paddingHorizontal="14dp"
        android:paddingVertical="10dp"
        android:text="Cancel"
        android:textAllCaps="true"
        app:layout_constraintEnd_toStartOf="@+id/txtAllow"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtSubTitle" />

    <TextView
        android:id="@+id/txtAllow"
        style="@style/bodyBoldMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="14dp"
        android:paddingVertical="10dp"
        android:text="Ok"
        android:textAllCaps="true"
        android:textColor="@color/blue_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/txtDeny"
        app:layout_constraintTop_toBottomOf="@+id/txtSubTitle" />
</androidx.constraintlayout.widget.ConstraintLayout>