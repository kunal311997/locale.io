<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/blue_main</item>
        <item name="windowSplashScreenAnimationDuration">2000</item>
        <item name="postSplashScreenTheme">@style/Theme.BackgroundLocation</item>
    </style>

    <!-- Base application theme. -->
    <style name="Theme.BackgroundLocation" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blue_main</item>
        <item name="colorPrimaryDark">@color/blue_main</item>
    </style>

    <style name="searchViewStyle" parent="Widget.AppCompat.SearchView.ActionBar">
        <item name="android:fontFamily">@font/avenirltstd_light</item>
        <item name="android:textColor">@color/title_color</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="bodyLightLarge" parent="ThemeOverlay.Material3.AutoCompleteTextView">
        <item name="android:fontFamily">@font/avenirltstd_light</item>
        <item name="android:textColor">@color/title_color</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="bodyBoldLarge" parent="ThemeOverlay.Material3.AutoCompleteTextView">
        <item name="android:fontFamily">@font/avenirltstd_bold</item>
        <item name="android:textColor">@color/title_color</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="bodyWhiteBoldLarge" parent="ThemeOverlay.Material3.AutoCompleteTextView">
        <item name="android:fontFamily">@font/avenirltstd_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="bodyLightMedium" parent="ThemeOverlay.Material3.AutoCompleteTextView">
        <item name="android:fontFamily">@font/avenirltstd_light</item>
        <item name="android:textColor">@color/title_color</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="bodyBoldMedium" parent="ThemeOverlay.Material3.AutoCompleteTextView">
        <item name="android:fontFamily">@font/avenirltstd_bold</item>
        <item name="android:textColor">@color/title_color</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="bodyWhiteLightMedium" parent="ThemeOverlay.Material3.AutoCompleteTextView">
        <item name="android:fontFamily">@font/avenirltstd_light</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="chipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="android:textAppearance">@style/bodyLightMedium</item>
        <item name="chipBackgroundColor">@color/blue_translucent</item>
        <item name="chipIconTint">@color/black</item>
        <item name="chipMinHeight">40dp</item>
        <item name="rippleColor">@color/blue</item>
    </style>

</resources>